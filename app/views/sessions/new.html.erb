<h1>Log in</h1>

<% if flash[:alert] %>
   <p class="alert-error"><%= flash[:alert] %></p>
<% end %>

<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <button class="btn" type="submit">Log in</button>
<% end %>