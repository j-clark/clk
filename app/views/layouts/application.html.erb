<!DOCTYPE html>
<html>
<head>
  <title>Clikd</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    "bootstrap",   :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar">
    <div class="navbar-inner">
      <a class="brand" href="/">Clikd</a>
      <ul class="nav">
        <li><%= link_to "Browse", posts_url %></li>
        <% if logged_in? %>
          <li><%= link_to "Create a listing", new_post_url %></li>
        <% end %>
      </ul>

      <ul class="nav pull-right">
        <% if logged_in? %>
          <li><%= link_to current_user.username, user_url(current_user.username) %></li>
          <li><%= link_to "Log Out", '/logout' %></li>
        <% else %>
          <li><%= link_to "Log In", '/login' %></li>
          <li><%= link_to "Sign Up", controller: :users, action: :new %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="content">
    <%= yield %>
  </div>

</body>
</html>
